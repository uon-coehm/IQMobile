<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.thepalladiumgroup.iqm.ContactForm">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/primary_dark"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="logo_register_contact"
                    android:src="@drawable/ic_contact_phone_white_24dp" />

                <TextView
                    android:id="@+id/textViewHContact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/title_contact"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/textViewContactPatientId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="0"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:visibility="invisible" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewContactPatientName"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content" />


                <TextView
                    android:id="@+id/textViewContactTelephone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Telephone   (format 0722123456)"
                    android:textSize="14sp" />


                <EditText
                    android:id="@+id/editTextContactTelephone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textViewContactKin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name of Next of Kin"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/editTextContactKin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textViewContactKinTelephone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Next of Kin Telephone  (format 0722123456)"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/editTextContactKinTelephone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="phone"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textViewContactKinRelation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Relationship"
                    android:textSize="14sp" />

                <Spinner
                    android:id="@+id/spinnerRelations"
                    style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/editTextKinRelationOther"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="specify other relation"
                    android:inputType="textPersonName"
                    android:visibility="invisible" />


            </LinearLayout>


        </LinearLayout>

    </FrameLayout>
</ScrollView>